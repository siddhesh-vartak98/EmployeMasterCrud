@model EmployeMasterCrud.Models.CityMaster

@{
    ViewData["Title"] = "Create City";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create City</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="m-0 font-weight-bold text-primary">
                                Create City
                            </h4>
                        </div>
                        <div class="col-md-6">
                            <div style="float:right">
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row form-group">
                            <div class="col-md-4">
                                <label asp-for="CountryId" class="control-label"></label><span class="text-danger">*</span>
                                <select asp-for="CountryId" class="form-control" asp-items="@ViewBag.CountryId">
                                    <option value="">Select Country</option>
                                </select>
                                <div class="divError">
                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="StateId" class="control-label"></label><span class="text-danger">*</span>
                                <select asp-for="StateId" class="form-control" asp-items="@ViewBag.StateId">
                                    <option value="">Select State</option>
                                </select>
                                <div class="divError">
                                    <span asp-validation-for="StateId" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row form-group">
                            <div class="col-md-5">
                                <label asp-for="CityName" class="control-label"></label><span class="text-danger">*</span>
                                <input asp-for="CityName" class="form-control" aria-describedby="TitleHelpBlock" />
                                <small id="TitleHelpBlock" class="form-text text-muted">
                                    City name has 200 characters limit.
                                </small>
                                <div class="divError">
                                    <span asp-validation-for="CityName" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>