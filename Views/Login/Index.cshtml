@model EmployeMasterCrud.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Log in | Employe Master Admin</title>

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

    <link type="text/css" href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

</head>
<body class="hold-transition login-page">
    <div class="login-box card">
        <div class="login-logo border-botton">
            <a href="#">

            </a>
        </div>
        <!-- /.login-logo -->
        <div class="">
            <div class="card-body login-card-body">
                <p class="login-box-msg mb-4">Sign in to start your session</p>
                <form method="post" asp-controller="Login" asp-action="Index" class="user">
                    <div class="divError mb-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>

                    <div class="input-group">
                        @*  <label class="control-label"> Email</label>*@
                        <input asp-for="email" class="form-control form-control-user" placeholder="Enter Email" autocomplete="off" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>

                    </div>
                    <div class="divError mb-3">
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        @* <label class="control-label">Password</label>*@
                        <input asp-for="password" class="form-control form-control-user" placeholder="Password" type="password" autocomplete="off" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>

                    </div>
                    <div class="divError mb-3">
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="row mt-4">
                        @*<div class="col-8">
                        <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                        Remember Me
                        </label>
                        </div>
                        </div>*@
                        <!-- /.col -->
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                @*<div class="social-auth-links text-center mb-3">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>
                </div>*@
                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                <a href="#">I forgot my password</a>
                </p>*@
                @*<p class="mb-0">
                <a href="#" class="text-center">Register a new membership</a>
                </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script type="text/javascript" src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script type="text/javascript" src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script type="text/javascript" src="~/dist/js/adminlte.min.js"></script>

    <script type="text/javascript">
        $(".login-logo").click(function () {

            $("#email").val("superadmin@companyname.com");
            $("#password").val("123456");

        });
    </script>

</body>
</html>
