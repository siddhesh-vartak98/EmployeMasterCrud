@model EmployeMasterCrud.ViewModels.EmployeeViewModel
@using EmployeMasterCrud.Common

@{
    ViewData["Title"] = "Create Employee";

    string imagePath = Config.placeholderImageUrl;

    if(Model != null)
    {
        if (!string.IsNullOrEmpty(Model.ThumbnailImage))
        {
            imagePath = Config.ThumbnailImagePath + Model.ThumbnailImage;
        }
    }

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create Employee</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="m-0 font-weight-bold text-primary">
                                Create Employee
                            </h4>
                        </div>
                        <div class="col-md-6">
                            <div style="float:right">
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="CountryCode" class="form-control" type="hidden" />
                                <input asp-for="CountryFlag" class="form-control" type="hidden" />


                                <div class="card">
                                    <div class="card-header py-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4 class="m-0 font-weight-bold text-primary">
                                                    Basic Details
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row form-group">
                                            <div class="col-md-4">
                                                <label asp-for="Name" class="control-label"></label><span class="text-danger">*</span>
                                                <input asp-for="Name" class="form-control" />
                                                <div class="divError">
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="EmailId" class="control-label"></label><span class="text-danger">*</span>
                                                <input asp-for="EmailId" class="form-control" />
                                                <div class="divError">
                                                    <span asp-validation-for="EmailId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="MobileNo" class="control-label"></label><span class="text-danger">*</span>
                                                <div>
                                                    <input asp-for="MobileNo" class="form-control" />
                                                </div>
                                                <div class="divError">
                                                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <label asp-for="ThumbnailImage" class="control-label"></label><span class="text-danger">*</span>
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <input type="file" id="bannerImage" class="fu" accept=".jpg,.jpeg,.png" />
                                                        </td>
                                                        <td>
                                                            <input type="button" value="Upload" id="btnUploadImage" class="btn btn-primary" data-URL="/EmployeeMaster/SingleUploadImage" data-path="@Config.ThumbnailImagePath" />
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td class="mt-3 colspan=2">
                                                            Please upload image of size less than 1MB.
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>

                                            <div class=" col-md-12 mt-3">
                                                <img src="@imagePath" alt="Alternate Text" id="ImgUploadedImage" style="width:200px;height:200px;" />
                                                @Html.HiddenFor(model => model.ThumbnailImage, new { id = "image" })
                                                <div class="divError">
                                                    <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div> <!-- Image Upload -->
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header py-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4 class="m-0 font-weight-bold text-primary">
                                                    Address
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row form-group">

                                            <div class="col-md-4">
                                                <label asp-for="CountryId" class="control-label"></label><span class="text-danger">*</span>
                                                <select asp-for="CountryId" class="form-control" asp-items="@ViewBag.CountryId">
                                                    <option selected disabled>Select Country</option>
                                                </select>
                                                <div class="divError">
                                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="StateId" class="control-label"></label><span class="text-danger">*</span>
                                                <select asp-for="StateId" class="form-control" asp-items="@ViewBag.StateId">
                                                    <option selected disabled>Select State</option>
                                                </select>
                                                <div class="divError">
                                                    <span asp-validation-for="StateId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="CityId" class="control-label"></label><span class="text-danger">*</span>
                                                <select asp-for="CityId" class="form-control" asp-items="@ViewBag.CityId">
                                                    <option selected disabled>Select City</option>
                                                </select>
                                                <div class="divError">
                                                    <span asp-validation-for="CityId" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row form-group">
                                            <div class="col-md-6">
                                                <label asp-for="AddressLineOne" class="control-label"></label><span class="text-danger">*</span>
                                                <input asp-for="AddressLineOne" class="form-control" />
                                                <div class="divError">
                                                    <span asp-validation-for="AddressLineOne" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <label asp-for="AddressLineTwo" class="control-label"></label><span class="text-danger">*</span>
                                                <input asp-for="AddressLineTwo" class="form-control" />
                                                <div class="divError">
                                                    <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row form-group">
                                            <div class="col-md-12">
                                                <label asp-for="IsPrimary" class="control-label"></label><span class="text-danger">*</span>
                                                <input asp-for="IsPrimary" class="form-control" />
                                                <div class="divError">
                                                    <span asp-validation-for="IsPrimary" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header py-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4 class="m-0 font-weight-bold text-primary">
                                                    Files
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        @Html.Hidden("hfGalleryFileCount", 0)
                                        @* multi upload *@

                                        <div class="row">
                                            <div class="col-md-3">

                                                <input type="file" id="fumultiimage" class="fumulti" name="fumultiimage" accept=".jpg,.jpeg,.png,application/msword,.docx, application/pdf" multiple />
                                                <div class="divError">
                                                    <span class="field-validation-valid text-danger" data-valmsg-for="fumultiimage" data-valmsg-replace="true"></span>
                                                </div>
                                               @*  <p class="paraInfo">Recommended Size - 200 X 250</p> *@
                                            </div>
                                            <div class="col-md-3">
                                                <input type="button" value="Upload" class="btn btn-primary btnMultiUploadImage" data-URL="/ProductMaster/MultiUploadFile" data-path="@Config.EmpFilePath" />

                                            </div>
                                        </div><br />

                                        @*Here We Post MultiImage*@
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="divUploadedItemContainer">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header py-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h4 class="m-0 font-weight-bold text-primary">
                                                    Salary 
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        @* package upload*@
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group row mb-3">
                                                    <div class="col-md-4">
                                                        <input type="button" value="Add Document" id="addFileNewsDownload" class="btn btn-sm btn-primary" />
                                                    </div>
                                                </div>

                                                <div class="form-group row mb-3">
                                                    <div class="col-md-2">
                                                        Package Name
                                                    </div>
                                                    <div class="col-md-3">
                                                        Package Value
                                                    </div>
                                                    <div class="col-md-4">
                                                        Package File
                                                    </div>
                                                    <div class="col-md-2">
                                                        File Review
                                                    </div>
                                                    <div class="col-md-1">
                                                        Action
                                                    </div>
                                                </div>


                                                <div id="newPackage">
                                                    @Html.Hidden("hfNewsFileCount", 0)

                                                </div>

                                                <div id="newsDownloadFileShowContainer">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript" src="~/js/employee.js" asp-append-version="true"></script>


